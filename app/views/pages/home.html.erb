<!-- Animation CSS -->
<style>
  @keyframes fade-in {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-in {
    animation: fade-in 1s ease-out both;
  }
</style>

<script>
  (function() {
    const container = document.getElementById('slides-container');
    const buttons = document.querySelectorAll('[data-slide]');
    let currentIndex = 0;

    function goToSlide(idx) {
      currentIndex = (idx + buttons.length) % buttons.length;
      container.style.transform = `translateX(-${currentIndex * 100}%)`;
      buttons.forEach((btn, i) => {
        btn.classList.toggle('bg-cyan-400', i === currentIndex);
        btn.classList.toggle('bg-cyan-600/50', i !== currentIndex);
      });
    }

    buttons.forEach(btn => {
      btn.addEventListener('click', () => goToSlide(parseInt(btn.dataset.slide)));
    });

    setInterval(() => goToSlide(currentIndex + 1), 6000);
  })();
</script>
